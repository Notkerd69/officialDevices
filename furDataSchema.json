{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Maintainers Metadata Schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "number"
        },
        "data_class": {
            "type": "string"
        },
        "devices": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "family": {
                        "type": "string"
                    },
                    "brand_override": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "family"
                ]
            }
        },
        "furries": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "family": {
                        "type": "string"
                    },
                    "brand": {
                        "type": "string"
                    },
                    "furs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "family",
                    "brand",
                    "furs"
                ]
            }
        }
    },
    "required": [
        "version",
        "data_class",
        "devices",
        "furries"
    ]
}
